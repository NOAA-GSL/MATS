#!/usr/bin/env bash
stack="matsStack"
if [ $# -eq 1 ]; then
    stack=$1
fi
if docker node ls > /dev/null 2>&1; then
    echo running in swarm node
else
    echo "initializing swarm mode"
    docker swarm init
fi
docker network create -d overlay web
docker stack deploy -c docker-compose.yml ${stack}