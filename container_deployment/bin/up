#!/usr/bin/env bash
RED='\033[0;31m'
GRN='\033[0;32m'
ORNG='\033[0;33m'
NC='\033[0m' # No Color
stack="matsStack"
if [ $# -eq 1 ]; then
    stack=$1
else
    echo -e "${GRN} defaulting to stack named matsStack${NC}"
fi
echo -e "${GRN} Bringing up stack ${stack}${NC}"
if docker node ls > /dev/null 2>&1; then
    echo -e "${GRN}running in swarm mode${NC}"
else
    echo -e "${GRN}initializing swarm mode${NC}"
    docker swarm init
fi
docker network create -d overlay web
env=$(jq -r '.environment' $(find ~ -type f -name environment.json 2>/dev/null))
docker pull -a --disable-content-trust matsapps/${env}
docker stack deploy -c docker-compose.yml ${stack}
